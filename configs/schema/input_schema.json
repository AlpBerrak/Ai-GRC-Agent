{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Ai-GRC-Agent Input Schema",
    "description": "Schema defining the required and optional structure for system configuration input to the Ai-GRC-Agent.",
    "type": "object",
    "required": [
        "system",
        "network",
        "security",
        "applications",
        "compliance",
        "intent"
    ],
    "properties": {
        "system": {
            "type": "object",
            "required": ["hostname", "environment", "os"],
            "properties": {
                "hostname": {
                    "type": "string"
                },
                "environment": {
                    "type": "string",
                    "enum": ["production", "staging", "development", "test"]
                },
                "os": {
                    "type": "object",
                    "required": ["name", "version", "architecture"],
                    "properties": {
                        "name": { "type": "string" },
                        "version": { "type": "string" },
                        "kernel": { "type": "string" },
                        "architecture": {
                            "type": "string",
                            "enum": ["x86_64", "arm64", "aarch64"]
                        }
                    }
                },
                "hardware": {
                    "type": "object",
                    "properties": {
                        "cpu_cores": { "type": "integer", "minimum": 1 },
                        "memory_gb": { "type": "integer", "minimum": 1 },
                        "storage": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "required": ["mount", "type", "size_gb", "encrypted"],
                                "properties": {
                                    "mount": { "type": "string" },
                                    "type": {
                                        "type": "string",
                                        "enum": ["ssd", "hdd", "nvme"]
                                    },
                                    "size_gb": { "type": "integer", "minimum": 1 },
                                    "encrypted": { "type": "boolean" }
                                }
                            }
                        }
                    }
                }
            }
        },
        "network": {
            "type": "object",
            "required": ["interfaces"],
            "properties": {
                "interfaces": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "required": ["name", "ip_address", "subnet"],
                        "properties": {
                            "name": { "type": "string" },
                            "ip_address": { "type": "string", "format": "ipv4" },
                            "subnet": { "type": "string" },
                            "gateway": { "type": "string", "format": "ipv4" },
                            "public_facing": { "type": "boolean" }
                        }
                    }
                },
                "dns_servers": {
                    "type": "array",
                    "items": { "type": "string", "format": "ipv4" }
                },
                "open_ports": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": ["port", "protocol"],
                        "properties": {
                            "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
                            "protocol": {
                                "type": "string",
                                "enum": ["tcp", "udp"]
                            },
                            "service": { "type": "string" }
                        }
                    }
                },
                "firewall": {
                    "type": "object",
                    "properties": {
                        "default_policy": {
                            "type": "string",
                            "enum": ["allow", "deny"]
                        },
                        "rules": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "required": ["port", "action"],
                                "properties": {
                                    "port": { "type": "integer" },
                                    "source": { "type": "string" },
                                    "action": {
                                        "type": "string",
                                        "enum": ["allow", "deny"]
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "security": {
            "type": "object",
            "required": ["authentication", "encryption"],
            "properties": {
                "authentication": {
                    "type": "object",
                    "properties": {
                        "password_policy": {
                            "type": "object",
                            "properties": {
                                "min_length": { "type": "integer", "minimum": 8 },
                                "complexity_required": { "type": "boolean" },
                                "rotation_days": { "type": "integer", "minimum": 0 }
                            }
                        },
                        "mfa_enabled": { "type": "boolean" },
                        "privileged_access_management": { "type": "boolean" }
                    }
                },
                "encryption": {
                    "type": "object",
                    "properties": {
                        "data_at_rest": { "type": "boolean" },
                        "data_in_transit": { "type": "boolean" },
                        "tls_versions": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "enum": ["1.0", "1.1", "1.2", "1.3"]
                            }
                        },
                        "weak_protocols_enabled": {
                            "type": "array",
                            "items": { "type": "string" }
                        }
                    }
                },
                "monitoring": {
                    "type": "object",
                    "properties": {
                        "logging_enabled": { "type": "boolean" },
                        "log_retention_days": { "type": "integer", "minimum": 0 },
                        "ids_enabled": { "type": "boolean" },
                        "siem_integrated": { "type": "boolean" }
                    }
                },
                "patching": {
                    "type": "object",
                    "properties": {
                        "automatic_updates": { "type": "boolean" },
                        "last_patch_date": { "type": "string", "format": "date" },
                        "known_unpatched_vulnerabilities": {
                            "type": "array",
                            "items": { "type": "string" }
                        }
                    }
                }
            }
        }

}
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Ai-GRC-Agent Input Schema",
    "type": "object",
    "required": ["system", "network", "security", "compliance", "intent"],
    "properties": {
    "system": {
        "type": "object",
        "required": ["hostname", "environment", "os"],
        "properties": {
        "hostname": { "type": "string" },
        "environment": {
            "type": "string",
            "enum": ["development", "staging", "production"]
        },
        "os": {
            "type": "object",
            "required": ["name", "version", "architecture"],
            "properties": {
                "name": { "type": "string" },
                "version": { "type": "string" },
                "kernel": { "type": "string" },
                "architecture": { "type": "string" }
            }
        },
        "hardware": {
            "type": "object",
            "properties": {
                "cpu_cores": { "type": "integer", "minimum": 1 },
                "memory_gb": { "type": "integer", "minimum": 1 },
                "storage": {
                "type": "array",
                "items": {
                    "type": "object",
                    "required": ["mount", "type", "size_gb", "encrypted"],
                    "properties": {
                    "mount": { "type": "string" },
                    "type": { "type": "string", "enum": ["ssd", "hdd"] },
                    "size_gb": { "type": "integer", "minimum": 1 },
                    "encrypted": { "type": "boolean" }
                    }
                }
                }
            }
            }
        }
    }
}
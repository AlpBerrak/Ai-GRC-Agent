{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Ai-GRC-Agent Input Schema",
    "description": "Schema defining the required and optional structure for system configuration input to the Ai-GRC-Agent.",
    "type": "object",
    "required": [
        "system",
        "network",
        "security",
        "applications",
        "compliance",
        "intent"
    ],
    "properties": {
        "system": {
            "type": "object",
            "required": ["hostname", "environment", "os"],
            "properties": {
                "hostname": {
                    "type": "string"
                },
                "environment": {
                    "type": "string",
                    "enum": ["production", "staging", "development", "test"]
                },
                "os": {
                    "type": "object",
                    "required": ["name", "version", "architecture"],
                    "properties": {
                        "name": { "type": "string" },
                        "version": { "type": "string" },
                        "kernel": { "type": "string" },
                        "architecture": {
                            "type": "string",
                            "enum": ["x86_64", "arm64", "aarch64"]
                        }
                    }
                },
                "hardware": {
                    "type": "object",
                    "properties": {
                        "cpu_cores": { "type": "integer", "minimum": 1 },
                        "memory_gb": { "type": "integer", "minimum": 1 },
                        "storage": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "required": ["mount", "type", "size_gb", "encrypted"],
                                "properties": {
                                    "mount": { "type": "string" },
                                    "type": {
                                        "type": "string",
                                        "enum": ["ssd", "hdd", "nvme"]
                                    },
                                    "size_gb": { "type": "integer", "minimum": 1 },
                                    "encrypted": { "type": "boolean" }
                                }
                            }
                        }
                    }
                }
            }
        },
        "network": {
            "type": "object",
            "required": ["interfaces"],
            "properties": {
                "interfaces": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "required": ["name", "ip_address", "subnet"],
                        "properties": {
                            "name": { "type": "string" },
                            "ip_address": { "type": "string", "format": "ipv4" },
                            "subnet": { "type": "string" },
                            "gateway": { "type": "string", "format": "ipv4" },
                            "public_facing": { "type": "boolean" }
                        }
                    }
                },
                "dns_servers": {
                    "type": "array",
                    "items": { "type": "string", "format": "ipv4" }
                },
                "open_ports": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": ["port", "protocol"],
                        "properties": {
                            "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
                            "protocol": {
                                "type": "string",
                                "enum": ["tcp", "udp"]
                            },
                            "service": { "type": "string" }
                        }
                    }
                }

}
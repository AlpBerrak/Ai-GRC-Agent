{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Ai-GRC-Agent Input Schema",
    "description": "Schema defining the required and optional structure for system configuration input to the Ai-GRC-Agent.",
    "type": "object",
    "required": [
        "system",
        "network",
        "security",
        "applications",
        "compliance",
        "intent"
    ],
    "properties": {
        "system": {
            "type": "object",
            "required": ["hostname", "environment", "os"],
            "properties": {
                "hostname": {
                    "type": "string"
                },
                "environment": {
                    "type": "string",
                    "enum": ["production", "staging", "development", "test"]
                },
                "os": {
                    "type": "object",
                    "required": ["name", "version", "architecture"],
                    "properties": {
                        "name": { "type": "string" },
                        "version": { "type": "string" },
                        "kernel": { "type": "string" },
                        "architecture": {
                            "type": "string",
                            "enum": ["x86_64", "arm64", "aarch64"]
                        }
                    }
                }
                
}
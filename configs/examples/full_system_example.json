{
    "system": {
        "hostname": "server-01",
        "environment": "production",
        "os": {
            "name": "Ubuntu",
            "version": "22.04",
            "kernel": "5.15.0",
            "architecture": "x86_64"
        },
        "hardware": {
            "cpu_cores": 8,
            "memory_gb": 32,
            "storage": [
                { "mount": "/", "type": "ssd", "size_gb": 500, "encrypted": true },
                { "mount": "/backup", "type": "hdd", "size_gb": 2000, "encrypted": false }
            ]
        }
    },
    "network": {
        "interfaces": [
            { "name": "eth0", "ip_address": "192.168.1.10", "subnet": "255.255.255.0", "gateway": "192.168.1.1", "public_facing": false },
            { "name": "eth1", "ip_address": "10.0.0.5", "subnet": "255.255.0.0", "gateway": "10.0.0.1", "public_facing": true }
        ],
        "dns_servers": ["8.8.8.8", "1.1.1.1"],
        "open_ports": [
            { "port": 22, "protocol": "tcp", "service": "ssh" },
            { "port": 80, "protocol": "tcp", "service": "http" },
            { "port": 443, "protocol": "tcp", "service": "https" },
            { "port": 3306, "protocol": "tcp", "service": "mysql" }
        ],
        "firewall": {
            "default_policy": "deny",
            "rules": [
                { "port": 22, "source": "10.0.0.0/16", "action": "allow" },
                { "port": 443, "source": "0.0.0.0/0", "action": "allow" },
                { "port": 3306, "source": "0.0.0.0/0", "action": "deny" }
            ]
        }
    },
    "security": {
        "authentication": {
            "password_policy": { "min_length": 12, "complexity_required": true, "rotation_days": 90 },
            "mfa_enabled": true,
            "privileged_access_management": true
        },
        "encryption": {
            "data_at_rest": true,
            "data_in_transit": true,
            "tls_versions": ["1.2", "1.3"],
            "weak_protocols_enabled": ["TLSv1.0"]
        },
        "monitoring": {
            "logging_enabled": true,
            "log_retention_days": 180,
            "ids_enabled": true,
            "siem_integrated": true
        },
        "patching": {
            "automatic_updates": false,
            "last_patch_date": "2025-11-10",
            "known_unpatched_vulnerabilities": ["CVE-2024-12345"]
        }
    },
    "applications": {
        "web_server": {
            "name": "nginx",
            "version": "1.24.0",
            "ssl_enabled": true,
            "http_to_https_redirect": true,
            "cipher_suites": ["TLS_AES_256_GCM_SHA384", "TLS_CHACHA20_POLY1305_SHA256"]
        },
        "database": {
            "name": "MySQL",
            "version": "8.0.33",
            "encryption_enabled": true,
            "remote_access": false,
            "backup": { "enabled": true, "encrypted": true, "retention_days": 30 }
        }
    },
    "compliance": {
        "organization": { "industry": "finance", "company_size": "enterprise" },
        "jurisdiction": ["US-Federal", "California"],
        "regulations": ["PCI-DSS", "SOX", "HIPAA", "NIST-800-53"],
        "data_types": ["PII", "financial_records", "authentication_credentials"],
        "audit_history": {
            "last_audit_date": "2025-12-15",
            "open_findings": [
                { "id": "FND-001", "severity": "high", "description": "Unencrypted backups detected" }
            ]
        }
    },
    "intent": {
        "analysis_type": ["security_assessment", "compliance_check", "recommendations"],
        "output_detail_level": "high",
        "regulation_only": false
    }
}
